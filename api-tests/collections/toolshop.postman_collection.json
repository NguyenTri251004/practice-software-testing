{
  "info": {
    "_postman_id": "50a333a7-6c00-48c6-b279-ba0e812ed040",
    "name": "My Collection",
    "description": "Collection test API với token động",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login with Admin",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Lưu token vào environment",
              "let jsonData = pm.response.json();",
              "if (jsonData && jsonData.access_token) {",
              "    pm.environment.set(\"authToken\", jsonData.access_token);",
              "} else {",
              "    console.log(\"Không lấy được token từ response:\", jsonData);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"email\": \"admin@practicesoftwaretesting.com\",\r\n  \"password\": \"welcome01\"\r\n}"
        },
        "url": {
          "raw": "http://localhost:8091/users/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8091",
          "path": ["users", "login"]
        }
      }
    },
    {
      "name": "Add Product",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"id\": 1,\r\n  \"name\": \"Lorum ipsum\",\r\n  \"description\": \"Lorum ipsum\",\r\n  \"price\": 9.99,\r\n  \"is_location_offer\": 1,\r\n  \"is_rental\": 0\r\n}"
        },
        "url": {
          "raw": "http://localhost:8091/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8091",
          "path": ["products"]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{authToken}}",
              "type": "string"
            }
          ]
        },
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"name\": \"Laptop Pro\",\r\n  \"description\": \"Updated description\",\r\n  \"price\": 0,\r\n  \"category_id\": 1,\r\n  \"brand_id\": 1,\r\n  \"product_image_id\": 1,\r\n  \"is_location_offer\": 0,\r\n  \"is_rental\": 1\r\n}"
        },
        "url": {
          "raw": "http://localhost:8091/products/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8091",
          "path": ["products", "1"]
        }
      }
    },
    {
      "name": "Get related Product",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8091/products/1/related",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8091",
          "path": ["products", "1", "related"]
        }
      }
    }
  ]
}
